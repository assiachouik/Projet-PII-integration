{% extends 'base-user.html.twig' %}

{% block title %}New Commande{% endblock %}
{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Produit</th>
                <th>Prix</th>
                <th>Adresse</th>
                <th>Num_tel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.produit }}</td>
                <td>{{ commande.prix }}</td>
                <td>{{ commande.adresse }}</td>
                <td>{{ commande.numTel }}</td>
                
               <td>
                <a href="{{ path('app_commande_show', {'id': commande.id}) }}" title="Afficher" class="me-2">
                    <i class="fas fa-eye"></i>
                </a>
                <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" title="Modifier" class="me-2">
                    <i class="fas fa-edit"></i>
                </a>
                <form method="post" action="{{ path('app_commande_delete', {'id': commande.id}) }}" 
                    onsubmit="return confirm('Voulez-vous vraiment supprimer cette commande ?');"
                    class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                    <button class="btn text-danger border-0 p-0">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </form>
            </td>
 
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}
